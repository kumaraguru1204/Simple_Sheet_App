<Window
    x:Class="Simple_Sheet_App.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Simple_Sheet_App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Simple Sheet App">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel
            Orientation="Horizontal"
            Padding="10"
            Spacing="10"
            Grid.Row="0"
            Background="SteelBlue"
            >

            <TextBox x:ConnectionId='3' x:Name="RowBox"
                     PlaceholderText="Enter Row"
                     Width="80"/>

            <TextBox x:ConnectionId='4' x:Name="ColBox"
                     PlaceholderText="Enter Col"
                     Width="80"/>

            <TextBox x:ConnectionId='5' x:Name="ValBox"
                     PlaceholderText="Enter Value"
                     Width="150"/>

            <Button x:ConnectionId='6' Content="Set Value"
                                            />
            
            <Button x:ConnectionId='7' Content="Get Value"
                                     />

            <Button x:ConnectionId='8'                   >
                <SymbolIcon Symbol="Undo"/>
            </Button>

            <Button x:ConnectionId='9'                   >
                <SymbolIcon Symbol="Redo"/>
            </Button>


            <TextBlock x:ConnectionId='10' x:Name="StatBox"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
            

        </StackPanel>

        <ScrollViewer Grid.Row="1"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">

            <Grid x:ConnectionId='2' x:Name="MyGrid"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"/>

        </ScrollViewer>
    </Grid>

</Window>

